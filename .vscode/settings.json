{
  // === General Copilot ===
  "github.copilot.enable": { "*": true, "plaintext": false, "markdown": true },
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,

  // === Custom instructions ===
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.instructionsFilesLocations": [".github/instructions"],
  "chat.useAgentsMdFile": true,
  "chat.useNestedAgentsMdFiles": true,

  // === Agent mode (LLM tools, tasks, MCPs) ===
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 25,
  "github.copilot.chat.agent.autoFix": true,

  // === Tool and MCP controls ===
  "chat.tools.global.autoApprove": true,
  "chat.mcp.access": true,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "rm": false,
    "rmdir": false,
    "del": false,
    "kill": false,
    "curl": false,
    "wget": false,
    "eval": false,
    "chmod": false,
    "chown": false,
    "/^Remove-Item\\b/i": false
  },
  

  // === Reusable prompts and chat modes ===
  "chat.promptFiles": true,
  "chat.promptFilesLocations": [".github/prompts"],
  "chat.modeFilesLocations": [".github/chatmodes"],

  // === Accessibility & experience ===
  "chat.editor.fontSize": 14,
  "chat.fontSize": 13,
  "chat.checkpoints.enabled": true,
  "chat.checkpoints.showFileChanges": true,

  // === Python workspace example ===
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.pytestEnabled": true,

  "github.copilot.enableExperimentalFeatures": true,
  "chat.useNestedAgentsMdFiles": true

}
